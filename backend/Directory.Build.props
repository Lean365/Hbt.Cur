<Project>
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <PropertyGroup>
    <!-- 版本号规范: V主版本号.次版本号.修订号 (V0.0.1~V9.99.999) -->
    <!-- 主版本号(0-9): 重大功能变更或架构调整时增加 -->
    <!-- 次版本号(0-99): 新功能添加但向下兼容时增加 -->
    <!-- 修订号(0-999): bug修复和小改动时增加 -->
    <Version>0.0.8</Version>
    <AssemblyVersion>0.0.8</AssemblyVersion>
    <FileVersion>0.0.8</FileVersion>
    <InformationalVersion>0.0.8</InformationalVersion>
    
    <Company>Hbt365.Inc</Company>
    <Authors>Hbt365.Inc</Authors>
    <Product>黑冰台中台</Product>
    <Description>黑冰台中台管理系统</Description>
    <Copyright>Copyright © 2025 Hbt365</Copyright>
  </PropertyGroup>
</Project> 