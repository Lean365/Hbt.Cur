<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="logs/internal-nlog.txt">

  <!-- 启用ASP.NET Core布局渲染器 -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <!-- 日志输出目标 -->
  <targets>
    <!-- 文件日志 -->
    <target xsi:type="File" name="allfile"
            fileName="${basedir}/logs/${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}|${callsite}|${all-event-properties}" />

    <!-- 错误日志 -->
    <target xsi:type="File" name="errorfile"
            fileName="${basedir}/logs/error-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}|${callsite}|${all-event-properties}" />

    <!-- 调试日志 -->
    <target xsi:type="File" name="debugfile"
            fileName="${basedir}/logs/debug-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}|${callsite}|${all-event-properties}" />

    <!-- 带颜色的控制台日志 -->
    <target xsi:type="ColoredConsole" name="console" 
            useDefaultRowHighlightingRules="false"
            layout="${date:format=HH\:mm\:ss}|${pad:padding=5:inner=${level:uppercase=true}}|${logger}|${message} ${exception:format=tostring}">
      <highlight-row condition="level == LogLevel.Trace" foregroundColor="DarkGray" />
      <highlight-row condition="level == LogLevel.Debug" foregroundColor="Gray" />
      <highlight-row condition="level == LogLevel.Info" foregroundColor="White" />
      <highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow" />
      <highlight-row condition="level == LogLevel.Error" foregroundColor="Red" />
      <highlight-row condition="level == LogLevel.Fatal" foregroundColor="Red" backgroundColor="White" />
    </target>
  </targets>

  <!-- 日志规则 -->
  <rules>
    <!-- 所有日志，包括来自Microsoft的日志 -->
    <logger name="*" minlevel="Trace" writeTo="allfile" />

    <!-- 错误日志 -->
    <logger name="*" minlevel="Error" writeTo="errorfile" />

    <!-- 调试日志 -->
    <logger name="*" level="Debug" writeTo="debugfile" />

    <!-- 控制台输出 -->
    <logger name="*" minlevel="Trace" writeTo="console" />

    <!-- 过滤掉一些不需要的Microsoft日志 -->
    <logger name="Microsoft.*" maxlevel="Info" final="true" />
  </rules>
</nlog> 