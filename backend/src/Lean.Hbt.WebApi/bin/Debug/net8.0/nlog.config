<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwConfigExceptions="true">

  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <targets>
    <!-- 控制台输出 -->
    <target name="console" xsi:type="ColoredConsole" 
            layout="${time} ${level:padding=5} ${message} ${exception:format=message}">
      <highlight-row condition="level == LogLevel.Debug" foregroundColor="Gray" />
      <highlight-row condition="level == LogLevel.Info" foregroundColor="White" />
      <highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow" />
      <highlight-row condition="level == LogLevel.Error" foregroundColor="Red" />
      <highlight-row condition="level == LogLevel.Fatal" foregroundColor="Red" backgroundColor="White" />
      
      <!-- 关键字高亮 -->
      <highlight-word text="[成功]" foregroundColor="Green" />
      <highlight-word text="[失败]" foregroundColor="Red" />
      <highlight-word text="[警告]" foregroundColor="Yellow" />
      <highlight-word text="[错误]" foregroundColor="Red" />
      <highlight-word text="[初始化]" foregroundColor="Cyan" />
      <highlight-word text="[创建]" foregroundColor="Green" />
      <highlight-word text="[更新]" foregroundColor="Yellow" />
    </target>

    <!-- 文件日志 -->
    <target name="file" xsi:type="File"
            fileName="logs/app-${shortdate}.log"
            layout="${longdate}|${level:padding=5}|${logger:shortName=true}|${message}${exception:format=tostring:separator=\r\n}" />
            
    <!-- 错误日志 -->
    <target name="error" xsi:type="File"
            fileName="logs/error-${shortdate}.log"
            layout="${longdate}|${level:padding=5}|${logger:shortName=true}|${message}${exception:format=tostring:separator=\r\n}" />
  </targets>

  <rules>
    <!-- 控制台输出所有日志 -->
    <logger name="*" minlevel="Trace" writeTo="console" />
    
    <!-- 文件记录 Info 及以上级别日志 -->
    <logger name="*" minlevel="Info" writeTo="file" />
    
    <!-- 错误日志单独记录 -->
    <logger name="*" minlevel="Error" writeTo="error" />
  </rules>
</nlog>